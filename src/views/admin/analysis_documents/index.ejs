  <div class="content sm:ml-64">
    <div id="app" class="flex justify-center h-full bg-gray-200 p-4" style="min-height: 86vh;">
      <div class="w-full shadow-lg max-w-8xl bg-white p-6 rounded-lg sm:flex">
        <div class="w-full">
          <h5 class="text-3xl mb-6">CHỌN FILE VÀ TRÍCH XUẤT THÔNG TIN</h5>

          <div class="p-4 rounded-lg bg-gray-50 dark:bg-gray-800" id="upload" role="tabpanel" aria-labelledby="upload-tab">
            <form id="analysis-form" action="api/v1/files/perform_analysis" method="POST" enctype="multipart/form-data">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-gray-700 text-sm font-bold mb-2">NHẬP FILE NAME</label>
                  <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" name="fileName">
                </div>
              </div>

              <div id="extract-user-group">
                <div class="extract-user-item">
                  <div>
                    <div class="grid grid-cols-2 gap-4 mt-4">
                      <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2">CHỌN MẶT TRƯỚC</label>
                        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="file" name="frontImage">
                      </div>

                      <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="files">CHỌN MẶT SAU</label>
                        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="file" name="backImage">
                      </div>
                    </div>

                    <div class="grid gap-4 mt-4 user-infor hidden">
                      <div class="flex items-center p-4 mb-4 text-sm text-red-800 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800" role="alert">
                        <svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                        </svg>
                        <span class="sr-only">Info</span>
                        <div class="error-message hidden"></div>
                      </div>

                      <div class="grid grid-cols-2 gap-4">
                        <div>
                          <label class="block text-gray-700 text-sm font-bold mb-2">HỌ VÀ TÊN</label>
                          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" name="fullName">
                        </div>

                        <div>
                          <label class="block text-gray-700 text-sm font-bold mb-2">SỐ CCCD</label>
                          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" name="cardID">
                        </div>
                      </div>

                      <div class="grid grid-cols-3 gap-4">
                        <div>
                          <label class="block text-gray-700 text-sm font-bold mb-2">NGÀY SINH</label>
                          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="date" name="birthDate">
                        </div>

                        <div>
                          <label class="block text-gray-700 text-sm font-bold mb-2">NGÀY TẠO</label>
                          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="date" name="createdAt">
                        </div>

                        <div>
                          <label class="block text-gray-700 text-sm font-bold mb-2">GIỚI TÍNH</label>
                          <select class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="gender">
                            <option value="Nam">Nam</option>
                            <option value="Nu">Nữ</option>
                            <option value="other">Khác</option>
                          </select>
                        </div>
                      </div>

                      <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2">QUÊ QUÁN</label>
                        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" name="address">
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="mt-4 text-center">
                <button type="button" class="add-new-user bg-white text-gray-900 border border-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 mt-4">+ THÊM KHÁCH HÀNG</button>
              </div>

              <div class="mt-4 text-center">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">TRÍCH XUẤT THÔNG TIN</button>
              </div>
            </form>
          </div>

